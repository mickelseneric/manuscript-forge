{
  "name": "manuscript-forge",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "dev:all": "docker-compose up -d && npx prisma migrate dev && npx prisma db seed && npm run dev",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "worker": "tsx scripts/outbox-worker.ts",
    "test": "vitest run",
    "postinstall": "prisma generate"
  },
  "prisma": {
    "seed": "npx tsx prisma/seed.ts"
  },
  "dependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "next": "15.5.0",
    "@prisma/client": "^5.20.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.469.0",
    "tailwind-merge": "^2.5.2",
    "@radix-ui/react-slot": "^1.1.0",
    "jose": "^5.9.6",
    "@tanstack/react-query": "^5.59.15",
    "framer-motion": "^11.11.17",
    "react-hot-toast": "^2.4.1"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@tailwindcss/postcss": "^4",
    "tailwindcss": "^4",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "@eslint/eslintrc": "^3",
    "prisma": "^5.20.0",
    "tsx": "^4.19.1",
    "vitest": "^2.0.5"
  }
}
