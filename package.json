{
  "name": "manuscript-forge",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down -v",
    "db:wait": "npx wait-on tcp:localhost:5432",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:prepare": "npm run db:up && npm run db:wait && npm run db:migrate && npm run db:seed",
    "db:reset": "npm run db:down && npm run db:prepare",
    "worker": "tsx scripts/outbox-worker.ts",
    "dev:all": "npm run db:prepare && npm run dev",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:worker": "cross-env RUN_WORKER_TESTS=1 NOTIFY_DELIVERY_MODE=worker vitest run tests/worker-outbox.spec.ts",
    "postinstall": "prisma generate"
  },
  "prisma": {
    "seed": "npx tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@tanstack/react-query": "^5.59.15",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "framer-motion": "^11.11.17",
    "jose": "^5.9.6",
    "lucide-react": "^0.469.0",
    "next": "15.5.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hot-toast": "^2.4.1",
    "tailwind-merge": "^2.5.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "prisma": "^5.20.0",
    "tailwindcss": "^4",
    "tsx": "^4.19.1",
    "typescript": "^5",
    "vitest": "^2.0.5"
  }
}
